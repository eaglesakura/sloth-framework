<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            style="@style/EsMaterial.Widget.CardView.Light"
            android:layout_marginTop="@dimen/EsMaterial.Margin.KeyLine1Vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">

            <!-- パッケージ名 -->
            <android.support.v7.widget.AppCompatTextView android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:id="@+id/EsDebug.Info.PackageName"
                                                         android:layout_marginTop="@dimen/EsMaterial.Button.Margin"/>

            <include layout="@layout/esm_material_separator" android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

            <!-- バージョン名 -->
            <android.support.v7.widget.AppCompatTextView android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:id="@+id/EsDebug.Info.AppVersionName"
                                                         android:layout_marginTop="@dimen/EsMaterial.Button.Margin"/>

            <include layout="@layout/esm_material_separator" android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

            <!-- バージョンコード -->
            <android.support.v7.widget.AppCompatTextView android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:id="@+id/EsDebug.Info.AppVersionCode"
                                                         android:layout_marginTop="@dimen/EsMaterial.Button.Margin"/>

            <include layout="@layout/esm_material_separator" android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

            <!-- ローカルストレージのデータをバックアップする -->
            <com.eaglesakura.sloth.view.TransparentButton
                    android:id="@+id/EsDebug.Dump.Local"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView android:layout_width="match_parent"
                                                             android:layout_height="wrap_content"
                                                             android:text="@string/Widget.Debug.DumpLocal"/>

            </com.eaglesakura.sloth.view.TransparentButton>

            <include layout="@layout/esm_material_separator" android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

            <!-- デバッグモードをONにする -->
            <android.support.v7.widget.SwitchCompat
                    android:id="@+id/EsDebug.DebugMode.Switch"
                    android:layout_width="match_parent"
                    android:text="@string/Widget.Debug.ModeSwitch"
                    android:layout_height="wrap_content"/>

            <include layout="@layout/esm_material_separator" android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
